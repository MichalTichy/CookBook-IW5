@using CookBook.DAL.Entities
@model CookBook.BL.Models.RecipeDetailModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="detail-section">
    <div class="container">
        <div class="root-grid">
            <form asp-action="Save">
                <div class="action-buttons-section">
                    <input type="submit" value="Save" class="button save-button" />
                    <a asp-action="Delete" asp-route-id="@Model.Id" style="@(Model.Id==Guid.Empty? "display:none" : "")" class="button delete-button">Delete</a>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Type" class="control-label"></label>
                    <select asp-for="Type" asp-items="@Html.GetEnumSelectList(typeof(FoodType))"class="form-control"></select>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control"/>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Duration" class="control-label"></label>
                    <input asp-for="Duration" class="form-control"/>
                    <span asp-validation-for="Duration" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="Id"/>
            </form>
        </div>
    </div>
</section>
